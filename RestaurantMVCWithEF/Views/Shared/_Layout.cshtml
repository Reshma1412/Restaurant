<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class=" icon-bar"></span>
                    <span class=" icon-bar"></span>
                </button>
                @Html.ActionLink("Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Manage", "Index", "Home")</li>*@
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Manage <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Restaurant", "Index", "RestaurantDetails", null, new { id = "Restaurant" })</li>
                            <li>@Html.ActionLink("Cuisine", "Index", "Cuisines", null, new { id = "Cuisine" })</li>
                            <li>@Html.ActionLink("Cuisine with API", "Index", "APINewCuisine", null, new { id = "Cuisine" })</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Orders", "Index", "OrderInfoes")</li>
                    <li>@Html.ActionLink("Bills", "Index", "Bills")</li>
                    <li>@Html.ActionLink("Dining Table Track", "Index", "DiningTableTracks") </li>
                    <li>@Html.ActionLink("Customer", "Index", "Customers")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Reports <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Vacant Tables", "Index", "TableStatus", null, new { id = "Vacant Tables" })</li>
                            <li>@Html.ActionLink("Customer Order Details", "Index", "DisplayCustomerDetails", null, new { id = "Customer Order Details" })</li>
                            <li>@Html.ActionLink("Restaurant Yearly Order Amount", "Index", "YearTotalAmount", null, new { id = "Restaurant Yearly Order Amount" })</li>
                            <li>@Html.ActionLink("Day-Wise Total Amount", "Index", "DayWise", null, new { id = "Day-Wise Total Amount" })</li>
                            <li>@Html.ActionLink("Cuisine Details", "Index", "Vw_CuisineDetails", null, new { id = "Cuisine Details" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
